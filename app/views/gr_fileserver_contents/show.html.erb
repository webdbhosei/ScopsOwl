<div class="row">
  <div class="col s12 m6">
    <div class="card grey darken-2 hoverable">
      <div class="card-content white-text">
        <span class="card-title">File detail</span>
        <p>
          <strong>File name:</strong>
          <%= @gr_fileserver_content.file_name %>
        </p>
        <p>
          <strong>File type:</strong>
          <%= @gr_fileserver_content.file_type %>
        </p>
        <p>
          <strong>File size:</strong>
          <%= number_to_human_size @gr_fileserver_content.file_size, percision: 4 %>
        </p>
        <p>
          <strong>File permission:</strong>
          <% if @gr_fileserver_content.file_permission == 1 %>
            Private
          <% else %>
            Public
          <% end %>
        </p>
        <p>
          <strong>Updated at:</strong>
          <%= @gr_fileserver_content.updated_at %>
        </p>
        <p>
          <strong>Owner:</strong>
          <%= User.find(@gr_fileserver_content.user_id).handle %>
        </p>
      </div>
      <div class="card-action">
        <a href="/download?id=<%= @gr_fileserver_content.id %>" action="<%= :download %>" >Download</a>
        <% if current_user.id == User.find(@gr_fileserver_content.user_id).id %>
          <a href="<%= edit_gr_fileserver_content_path(@gr_fileserver_content) %>" >Edit</a>
        <% end %>
        <a href="<%= gr_fileserver_contents_path %>">Back</a>
      </div>
    </div>
  </div>
</div>

<%= render "fixed_action_button" %>
