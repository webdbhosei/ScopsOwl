<p id="notice"><%= notice %></p>

<h1>Chat Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chat_groups.each do |chat_group| %>
      <tr>
        <td><%= chat_group.name %></td>
        <td><%= link_to 'Show', chat_group %></td>
        <td><%= link_to 'Edit', edit_chat_group_path(chat_group) %></td>
        <td><%= link_to 'Destroy', chat_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chat Group', new_chat_group_path %>
